    }
    
    .lijn1 {
        font-size: 28px;
    }
    
    .lijn2, .lijn4, .lijn7, .lijn9, .lijn11 {
        font-size: 16px;
    }
    
    .lijn3, .lijn6, .lijn8, .lijn10 {
        font-size: 24px;
    }
    
    .techs {
        width: 50px;
        height: 50px;
        border-width: 2px;
    }
    
    .techsdiv {
        gap: 3px;
        padding: 8px;
    }
    
    .techicon {
        margin: 1px;
    }
    
    .project2, [class^="xp"] {
        font-size: 12px;
    }
    
    .clock {
        width: 120px;
    }
    
    .clock-text {
        font-size: 12px;
    }
    
    .alinea {
        margin-bottom: 40px;
    }
    
    .hamburger-menu.active .hamburger {
        left: 230px;
        top: 10px;
    }

    .progress {
        margin: 20px 0 10px 0;
        height: 12px;
        padding: 6px;
    }
    
    [id$="Bar"] {
        font-size: 14px;
        line-height: 12px;
    }

    .copyright-footer p {
        font-size: 14px;
    }
    
    .icons-container {
        gap: 15px;
    }
    
    .icon-wrapper img {
        width: 40px;
        height: 40px;
    }
