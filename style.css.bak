.hamburger {
    cursor: pointer;
    position: fixed;
    bottom: 20px;
    left: 20px;
    z-index: 1001;
    background: rgb(0, 51, 255);
    border-radius: 5px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    transition: all 0.3s ease;
    width: 70px;
    height: 70px;
}

.hamburger span {
    color: white;
    font: bolder 20px "Handjet", Papyrus, sans-serif;
    text-align: center;
}

.menu-items {
    position: fixed;
    top: 0;
    left: -250px;
    width: 250px;
    height: 100vh;
    background: rgb(0, 51, 255);
    padding-top: 60px;
    transition: left 0.3s ease;
    box-sizing: border-box;
    z-index: 1000;
}

.menu-items a {
    display: block;
    padding: 15px 25px;
    color: white;
    text-decoration: none;
    font: bolder 20px "Handjet", Papyrus, sans-serif;
}

.menu-items a:hover {
    background: rgba(255, 255, 255, 0.1);
}

.hamburger-menu.active .menu-items {
    left: 0;
}

.hamburger-menu.active .hamburger {
    left: 270px;
}

